{
    "id": "net.rpdev.OpenTodoList",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "OpenTodoList",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.kde.StatusNotifierWatcher"
    ],

    "modules": [
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "config-opts": [
                "-Dmanpage=false",
                "-Dgtk_doc=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.19.1/libsecret-0.19.1.tar.gz",
                    "sha256": "303c6e8cf3e12534e885b0682cd6130716c6834397b76d3829321b6d83b2389c"
                }
            ]
        },
        {
            "name": "qtremoteobjects",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qt/qtremoteobjects.git",
                    "disable-shallow-clone": true,
                    "branch": "dev"
                },
                {
                    "type": "shell",
                    "commands": [
                        "qmake -query QT_VERSION",
                        "git checkout v$(qmake -query QT_VERSION)"
                    ]
                }
            ]
        },
        {
            "name": "opentodolist",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DOPENTODOLIST_FLATPAK=ON",
                "-DOPENTODOLIST_WITH_KNOTIFICATIONS=ON",
                "-DQt5RemoteObjects_DIR=/app/usr/lib/all-linux-gnu/cmake/Qt5RemoteObjects"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                },
                {
                    "type": "shell",
                    "commands": [
                        "ln -s /app/usr/lib/*-linux-gnu /app/usr/lib/all-linux-gnu",
                        "ln -s /app/share /app/usr/share",
                        "ln -s /app/usr/lib/all-linux-gnu/libQt5RemoteObjects.so.5 /app/lib"
                    ]
                }
            ]
        }
    ]
}
